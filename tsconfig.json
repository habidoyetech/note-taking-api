{
  "compilerOptions": {
    /* Base Options */
    "target": "es2016",                               
    "module": "commonjs",                              
    "moduleResolution": "node",                        
    "outDir": "./dist",                                
    "rootDir": "./src",                                
    "strict": true,                                    
    "noImplicitAny": true,                             
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,         
    "skipLibCheck": true,                              
    "resolveJsonModule": true                          
  },
  "include": ["src/**/*"],                             
  "exclude": ["node_modules", "**/*.test.ts"]          
}